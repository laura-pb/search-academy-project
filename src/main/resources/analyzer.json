{
  "settings": {
    "analysis": {
      "analyzer": {
        "ngram_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "char_filter": [],
          "filter": [
            "lowercase",
            "asciifolding",
            "word_delimiter",
            "stop",
            "custom_ngram"
          ]
        },
        "exact_analyzer": {
          "type": "custom",
          "tokenizer": "keyword",
          "char_filter": [],
          "filter": [
            "lowercase",
            "asciifolding",
            "stop",
            "removeNonAlphanumeric"
          ]
        }
      },
      "filter": {
        "custom_ngram": {
          "type": "ngram",
          "min_gram": "3",
          "max_gram": "4"
        },
        "removeNonAlphanumeric": {
          "pattern": "[^\\p{L}\\p{Nd}\\{\" \"}]",
          "type": "pattern_replace",
          "replacement": ""
        }
      }
    }
  }
}